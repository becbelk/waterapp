<%- include('../../partials/search.ejs') %>
    <div class="m-4 table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col" class="col-1 text-center">الرقم</th>
                    <th scope="col" class="col-1">العداد</th>
                    <th scope="col" class="col-2">الاسم</th>
                    <th scope="col"class="col-1">العنوان</th>
                    <th scope="col" class="col-1">القديم</th>
                    <th scope="col" class="col-1">الحديد</th>
                    <th scope="col"class="col-1">جزافي</th>
                    <th scope="col" class="col-2">آخر تعديل</th>
                </tr>
            </thead>
            <tbody>



                <% consumers.forEach(consumer=> { %>
                    <tr class="align-middle ">
                        <td class="text-center">
                            <%= consumer.no %>
                        </td>
                        <td >
                            <%= consumer.watermeterId %>
                        </td>
                        <td >
                            <%= consumer.name %>
                        </td>
                        <td >
                            <%= consumer.address %>
                        </td>
                        <td <% if (consumer.saved==true) { %>class= "bg-primary fw-bold "
                            <% } else{ %> class= "text-dark" <% }%> >
                                    <%= consumer.oldConsumption %>
                        </td>
                        <td  <% if (consumer.saved==true) { %>
                            class= "bg-primary fw-bold "
                            <% } else{ %>
                                class= "text-dark"
                                <% }%>
                                    >
                                    <%= consumer.newConsumption %>
                        </td>
                        <td >
                            <%= consumer.isFlatRated? "جزافي" :"" %>
                        </td>
                        <td >
                            <div class="row">
                                <div class="my-2 col-7 text-primary ">
                                <%= new Date(consumer.editedAt).toLocaleString() %>
                                </div>
                                <div class=" col-2 d-flex flex-row justify-content-start gap-2">
                                    <button class="mX-3 btn btn-outline-primary btn-small centered" data-bs-toggle="modal"
                                        data-bs-target="#view-one-modal"
                                        data-consumer="{'watermeterId':'<%= consumer.watermeterId%>','no':'<%= consumer.no%>','name':'<%= consumer.name%>','address':'<%=consumer.address %>','oldConsumption':'<%= consumer.oldConsumption %>','newConsumption':'<%= consumer.newConsumption %>','isFlatRated':<%=consumer.isFlatRated  %>}">
                                        <img src="/img/view.png" class="small-icon" alt="معاينة"></button>
                                </div>
                                <div class="col-2 d-flex flex-row justify-content-start gap-2">
                                    <button class="mx-3 btn btn-outline-warning btn-small centered" data-bs-toggle="modal"
                                        data-bs-target="#delete-one-modal"
                                        data-consumer="{'watermeterId':'<%= consumer.watermeterId%>','no':'<%= consumer.no%>','name':'<%= consumer.name%>','address':'<%=consumer.address %>','oldConsumption':'<%= consumer.oldConsumption %>','newConsumption':'<%= consumer.newConsumption %>','isFlatRated':<%=consumer.isFlatRated  %>}">
                                        <img src="/img/delete-1.png" class="small-icon"></button>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <% }) %>
            </tbody>
        </table>
    </div>



    <div class="modal fade" id="view-one-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-info bg-gradient bg-opacity-75" id="content-modal">
                <div class="modal-header bg-primary">
                    <h5 class="h6 modal-title " id="exampleModalLabel">بيانات المستهلك</h5>
                    <input class="h6 modal-title  bg-primary border-0" disabled name="no">
                    <button type="button" class="close bg-danger" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <label for="recipient-name" class="col-2">العداد:</label>
                            <input type="text" class="col-5" name="watermeterId">

                            <label for="recipient-name" class="col-2">جزافي</label>
                            <input type="checkbox" class="col-2" name="isFlatRated">
                            <div class="col-6">
                                <label for="recipient-name" class="col-form-label">الاسم:</label>
                                <input type="text" class="form-control" name="name">
                                <label for="recipient-name" class="col-form-label">القديم:</label>
                                <input type="text" class="form-control" name="oldConsumption"
                                    value="<%= consumers.name %>">
                            </div>
                            <div class="col-6">
                                <label for="message-text" class="col-form-label">العنوان:</label>
                                <input type="text" class="form-control" name="address">
                                <label for="recipient-name" class="col-form-label">الجديد:</label>
                                <input type="text" class="col-3 form-control" name="newConsumption">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="cancel-btn" class="btn btn-secondary"
                        data-bs-dismiss="modal">رجوع</button>
                    <button type="button" id="save-btn" class="btn btn-success">تخزين</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete-one-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-secondary border-0" id="delete-modal">
                <div class="modal-header bg-danger">
                    <h5 class="h6 modal-title " id="deleteModalLabel">تنبيه سيتم حذف المستهلك رقم</h5>
                    <input class=" bg-danger h6 modal-title border-0" disabled name="no" id="no-delete">
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <label for="recipient-name" class="col-2">العداد:</label>
                            <input type="text" class="col-5 bg-secondary border-0" name="watermeterId" readonly>
                            <div class="col-6">
                                <label for="recipient-name" class="col-form-label bg-secondary border-0">الاسم:</label>
                                <input type="text" class="form-control bg-secondary border-0" name="name" readonly>
                                <label for="recipient-name" class="col-form-label bg-secondary border-0">القديم:</label>
                                <input type="text" class="form-control bg-secondary border-0" name="oldConsumption"
                                    value="<%= consumers.name %>" readonly>
                            </div>
                            <div class="col-6">
                                <label for="message-text" class="col-form-label">العنوان:</label>
                                <input type="text" class="form-control bg-secondary border-0" name="address" readonly>
                                <label for="recipient-name" class="col-form-label">الجديد:</label>
                                <input type="text" class="col-3 form-control bg-secondary border-0" name="newConsumption" readonly>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="cancel-delete-btn" class="btn btn-primary"
                        data-bs-dismiss="modal" >رجوع</button>
                    <button type="button" id="delete-btn" class="btn btn-dark"><img src="/img/delete-5.png" class="small-icon"></button>
                </div>
            </div>
        </div>
    </div>