                        <div class="col-6">
                            <label for="message-text" class="col-form-label">العنوان:</label>
                            <input type="text" class="form-control" name="address">
                            <label for="recipient-name" class="col-form-label">الجديد:</label>
                            <input type="text" class="col-3 form-control" name="newConsumption">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancel-btn" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" id="new-btn" class="btn btn-success " data-bs-dismiss="modal">تخزين</button>
            </div>
        </div>
    </div>
